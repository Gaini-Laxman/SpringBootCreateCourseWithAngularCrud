pipeline {
    agent any

    stages {
        stage('Build') {
            when {
                expression { BRANCH_NAME == 'feature' }
            }
            steps {
                sh 'echo "Building on feature branch"'
                // Add your build steps here
            }
        }

        stage('Deploy') {
            when {
                expression { TAG_NAME != null }
            }
            steps {
                sh 'echo "Deploying artifacts"'
                // Add your deployment steps here
            }
        }
    }
}
